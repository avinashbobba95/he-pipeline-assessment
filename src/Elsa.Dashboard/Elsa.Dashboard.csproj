<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>d1e00e77-9df1-4665-9129-aa059c51ef0e</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Elsa.Designer.Components.Web" Version="2.8.2" />
    <PackageReference Include="Microsoft.AspNetCore.DataProtection" Version="6.0.9" />
    <PackageReference Include="Microsoft.AspNetCore.DataProtection.EntityFrameworkCore" Version="6.0.9" />
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.17.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="www\build\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Remove="Scripts\Activities\GetCustomActivityProperties.js" />
    <None Remove="Scripts\CustomElsa.js" />
    <None Remove="Scripts\Drivers\ConditionalTextListPropertyDriver.js" />
    <None Remove="Scripts\Drivers\CustomSwitchPropertyDriver.js" />
    <None Remove="Scripts\Drivers\CustomTextPropertyDriver.js" />
    <None Remove="Scripts\Drivers\QuestionPropertyDriver.js" />
    <None Remove="Scripts\Plugins\CustomPlugins.js" />
    <None Remove="src\components\custom-input-property.tsx" />
    <None Remove="src\components\custom-outcome-property.tsx" />
    <None Remove="src\components\custom_outcome_list_property.tsx" />
    <None Remove="src\events\component-events.tsx" />
    <None Remove="src\models\activity-provider.ts" />
    <None Remove="src\models\Question.Model.ts" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Scripts\Activities\GetCustomActivityProperties.js" />
    <Content Include="Scripts\CustomElsa.js" />
    <Content Include="Scripts\Drivers\ConditionalTextListPropertyDriver.js" />
    <Content Include="Scripts\Drivers\CustomSwitchPropertyDriver.js" />
    <Content Include="Scripts\Drivers\CustomTextPropertyDriver.js" />
    <Content Include="Scripts\Drivers\QuestionPropertyDriver.js" />
    <Content Include="Scripts\Plugins\CustomPlugins.js" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Elsa.CustomInfrastructure\Elsa.CustomInfrastructure.csproj" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Include="Scripts\Activities\GetCustomActivityProperties.js" />
    <TypeScriptCompile Include="Scripts\CustomElsa.js" />
    <TypeScriptCompile Include="Scripts\Drivers\ConditionalTextListPropertyDriver.js" />
    <TypeScriptCompile Include="Scripts\Drivers\CustomSwitchPropertyDriver.js" />
    <TypeScriptCompile Include="Scripts\Drivers\CustomTextPropertyDriver.js" />
    <TypeScriptCompile Include="Scripts\Drivers\QuestionPropertyDriver.js" />
    <TypeScriptCompile Include="Scripts\Plugins\CustomPlugins.js" />
    <TypeScriptCompile Include="src\components\common-components\custom-outcome-property.tsx">
      <SubType>Code</SubType>
    </TypeScriptCompile>
    <TypeScriptCompile Include="src\components\common-components\custom-input-property.tsx" />
    <TypeScriptCompile Include="src\components\common-components\conditional_text_list_property.tsx" />
    <TypeScriptCompile Include="src\events\component-events.tsx" />
